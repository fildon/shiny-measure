{
  "name": "shiny-measure",
  "version": "1.0.0",
  "description": "A weight tracking webapp",
  "scripts": {
    "clean": "rm -rf dist",
    "build:js": "npm run clean && esbuild src/index.tsx --bundle --minify --outfile=dist/index.js",
    "build:js:dev": "npm run clean && esbuild src/index.tsx --bundle --sourcemap --outfile=dist/index.js",
    "build:static": "cp -RT static ./dist",
    "build": "npm run build:js && npm run build:static",
    "build:dev": "npm run build:js:dev && npm run build:static",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "serve": "serve dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fildon/shiny-measure.git"
  },
  "author": "Rupert Foggo McKay <maxfmckay@gmail.com> (https://fildon.me)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fildon/shiny-measure/issues"
  },
  "homepage": "https://github.com/fildon/shiny-measure#readme",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/luxon": "^2.0.5",
    "@types/react": "^17.0.27",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "esbuild": "^0.13.3",
    "esbuild-plugin-sass": "^0.6.0",
    "eslint": "^7.32.0",
    "eslint-plugin-jest": "^25.2.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "govuk-frontend": "^3.14.0",
    "jest": "^27.2.5",
    "luxon": "^2.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sass": "^1.43.2",
    "serve": "^12.0.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  }
}
