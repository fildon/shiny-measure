  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fildon/shiny-measure/issues"
  },
  "homepage": "https://github.com/fildon/shiny-measure#readme",
  "devDependencies": {
    "@types/react": "^17.0.27",
    "esbuild": "^0.13.3",
    "react": "^17.0.2",
    "react-charts": "^3.0.0-beta.33",
    "react-dom": "^17.0.2",
    "typescript": "^4.4.3"
  }
}
